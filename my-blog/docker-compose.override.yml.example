version: "3.8"
services:
    nginx:
        ports:
            - "${MB_WEB_PORT}:80"
    web:
        build:
            args:
                - BUILDER=dev-builder
            target: dev
        volumes:
            - .:/app
        environment:
            - DJANGO_ALLOW_ASYNC_UNSAFE=1
            - PYTHONUNBUFFERED=1
            - UWSGI_HONOUR_STDIN=true
            - UWSGI_PY_AUTORELOAD=2
            # Remote dev server host
            #- WEB_HOST=192.168.0.111
    db:
        volumes:
            - dbdata:/var/lib/postgresql/data/

volumes:
    dbdata:
        name: ${USER}-mb-dbdata
